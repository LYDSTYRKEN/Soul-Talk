<Window x:Class="Soul_Talk.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Soul_Talk"
        xmlns:vm="clr-namespace:Soul_Talk.ViewModels"
        mc:Ignorable="d"
        Title="Bogføringsprogram" Height="450" Width="800">

    <Window.Resources>
        <HierarchicalDataTemplate DataType="{x:Type vm:OverblikNode}"
                                  ItemsSource="{Binding Children}">
            <TextBlock Text="{Binding Title}" />
        </HierarchicalDataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Overskrift -->
        <StackPanel Grid.Row="0" Margin="10">
            <TextBlock Text="Bogføringsprogram"
                       FontSize="28"
                       FontWeight="Bold" />
            <TextBlock Text="Oversigt over indtægter"
                       FontSize="18"
                       Margin="0,5,0,0" />
        </StackPanel>

        <!-- TreeView med dine OverblikNode -->
        <TreeView Grid.Row="1" Grid.Column="0"
                  Margin="10,0,10,10"
                  ItemsSource="{Binding RootNodes}">
        </TreeView>

        <!-- Knap bundet til TilfoejIndtaegtCommand -->
        <Button Grid.Row="2" Grid.Column="0"
                    Content="Tilføj indtægt" 
                    FontSize="15" 
                    FontWeight="Bold"
                    FontFamily="Corbel"
                HorizontalAlignment="Right"
                Margin="0,0,140,10"
                Height="40"
                Width="120"
                Command="{Binding TilfoejIndtaegtCommand}"/>

        <Button Grid.Row="2" Grid.Column="1"
                Content="Tilføj Institution"
                    FontSize="15" 
                    FontWeight="Bold"
                    FontFamily="Corbel"
                HorizontalAlignment="Right"
                Height="40"
                Width="120"
                Margin="0,0,10,10"
                Command=""/>    
    </Grid>
</Window>
